{
    "version": "0.1.0",
    "command": "gcc",
    "isShellCommand": true,
    "showOutput": "always",
    "args": ["${file}", "-g", "-o", "bin\\out.exe"],
    "problemMatcher": {
        "fileLocation": "absolute",
        "pattern": {
            "regexp": "^(.+?):(\\d+):(\\d+): (\\w)+: (.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    },
    "echoCommand": true
}